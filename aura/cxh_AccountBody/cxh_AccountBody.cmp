<aura:component description="cxh_AccountBody" controller="cxh_AccountController">
    <!-- Incoming Attributes -->
    <aura:attribute name="acct" type="Account" />
    <aura:attribute name="accountId" type="String" default=""/>
    <aura:attribute name="fileId" type="String" default="" />

    <aura:handler event="c:Event_CloseModal" action="{!c.refresh}"/>

    <article class="slds-m-bottom--small">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media--center slds-has-flexi-truncate">
                <div class="slds-media__body">
                    <h4>
                        <div class="slds-card__header-link baseCard__header-title-container">
                            <span class="slds-text-heading--small slds-truncate slds-m-right--xx-small slds-float--left">Grower Details</span>
                        </div>
                    </h4>
                </div>
            </header>
            <div class="slds-no-flex">
                <ul class="slds-button-group slds-m-left--xx-small">
                    <button class="slds-button slds-button_neutral" onclick="{!c.openModal}">Edit</button>
                    <button class="slds-button slds-button_neutral" onclick="{!c.openSingleFile}">View Document</button>
                </ul>
            </div><!--/end button-->
        </div><!--/ end card header-->
        <div class="slds-card__body slds-card__body--inner slds-m-left--xx-small" style="overflow-x: scroll">
            <div class="slds-grid--pull-padded">
                <table class="slds-table slds-max-medium-table--stacked-horizontal">
                    <tbody>
                    <tr>
                        <td>
                            <p class="c-vdkgrey market slds-text-title slds-truncate slds-m-bottom--xx-small" title="Field 1">Billing Address</p>
                            <p class="slds-text-body--regular slds-truncate">
                                {!v.acct.BillingStreet}<br/>{!v.acct.BillingCity}, {!v.acct.BillingStateCode} {!v.acct.BillingPostalCode}<br/>{!v.acct.BillingCountry}
                            </p>
                        </td>
                        <td>
                            <p class="c-vdkgrey market slds-text-title slds-truncate slds-m-bottom--xx-small" title="Field 1">Description</p>
                            <p class="slds-text-body--regular slds-truncate">{!v.acct.Description}</p>
                        </td>
                        <td>
                            <p class="c-vdkgrey market slds-text-title slds-truncate slds-m-bottom--xx-small" title="Field 1">Document Link</p>
                            <a href="https://rwegner777-dev-ed.lightning.force.com/one/one.app#/sObject/ContentDocument/069f1000003jad1AAA">Sample Document</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div><!--/end pull padded-->
        </div><!--/end card body -->
    </article><!--/end card-->

</aura:component>
